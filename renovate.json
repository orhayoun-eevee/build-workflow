{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "labels": ["dependencies", "renovate"],
  "rangeStrategy": "replace",
  "rebaseWhen": "behind-base-branch",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "automerge": false,
  "platformAutomerge": true,
  "enabledManagers": ["github-actions", "dockerfile", "custom.regex"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "github actions",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["digest", "pin", "pinDigest", "patch", "minor"]
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "docker base images",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["digest", "pin", "pinDigest", "patch", "minor"]
    },
    {
      "matchManagers": ["custom.regex"],
      "matchDepTypes": ["tool-version", "python-package", "workflow-version", "workflow-image"],
      "groupName": "validation toolchain",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["digest", "pin", "pinDigest", "patch", "minor"]
    },
    {
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/docker\\/Dockerfile$/"],
      "matchStrings": ["helm-v(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)-linux-amd64\\.tar\\.gz"],
      "depNameTemplate": "helm/helm",
      "datasourceTemplate": "github-releases",
      "depTypeTemplate": "tool-version"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/docker\\/Dockerfile$/"],
      "matchStrings": ["helm plugin install https://github\\.com/helm-unittest/helm-unittest --version v(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"],
      "depNameTemplate": "helm-unittest/helm-unittest",
      "datasourceTemplate": "github-releases",
      "depTypeTemplate": "tool-version"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/docker\\/Dockerfile$/"],
      "matchStrings": ["kubeconform/releases/download/v(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)/kubeconform-linux-amd64\\.tar\\.gz"],
      "depNameTemplate": "yannh/kubeconform",
      "datasourceTemplate": "github-releases",
      "depTypeTemplate": "tool-version"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/docker\\/Dockerfile$/"],
      "matchStrings": ["chart-testing/releases/download/v(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)/chart-testing_[0-9]+\\.[0-9]+\\.[0-9]+_linux_amd64\\.tar\\.gz"],
      "depNameTemplate": "helm/chart-testing",
      "datasourceTemplate": "github-releases",
      "depTypeTemplate": "tool-version"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/docker\\/Dockerfile$/"],
      "matchStrings": ["yq/releases/download/v(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)/yq_linux_amd64"],
      "depNameTemplate": "mikefarah/yq",
      "datasourceTemplate": "github-releases",
      "depTypeTemplate": "tool-version"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/docker\\/Dockerfile$/"],
      "matchStrings": ["kube-linter/releases/download/v(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)/kube-linter-linux\\.tar\\.gz"],
      "depNameTemplate": "stackrox/kube-linter",
      "datasourceTemplate": "github-releases",
      "depTypeTemplate": "tool-version"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/docker\\/Dockerfile$/"],
      "matchStrings": ["yamllint==(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"],
      "depNameTemplate": "yamllint",
      "datasourceTemplate": "pypi",
      "depTypeTemplate": "python-package"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/docker\\/Dockerfile$/"],
      "matchStrings": ["checkov==(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"],
      "depNameTemplate": "checkov",
      "datasourceTemplate": "pypi",
      "depTypeTemplate": "python-package"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/docker\\/Dockerfile$/"],
      "matchStrings": ["yamale==(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"],
      "depNameTemplate": "yamale",
      "datasourceTemplate": "pypi",
      "depTypeTemplate": "python-package"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github\\/workflows\\/.*\\.ya?ml$/",
        "/templates\\/.*\\.github\\/workflows\\/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "uses:\\s*orhayoun-eevee/build-workflow/.github/workflows/[^@\\s]+@(?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "orhayoun-eevee/build-workflow",
      "datasourceTemplate": "github-tags",
      "depTypeTemplate": "workflow-version"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.github\\/workflows\\/.*\\.ya?ml$/",
        "/templates\\/.*\\.github\\/workflows\\/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "image:\\s*ghcr\\.io/orhayoun-eevee/helm-validate:(?<currentValue>v\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "ghcr.io/orhayoun-eevee/helm-validate",
      "datasourceTemplate": "docker",
      "depTypeTemplate": "workflow-image"
    }
  ]
}
